<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/adapter_fuelprices_back"
    android:padding="10dp"
    android:layout_margin="8dp"
    android:gravity="center"
    android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="0dp"
      android:layout_weight="1"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        android:textColor="@color/grey_bg"
        android:text="@string/schedule_date_time"
        app:fontName="@string/font_semi_bold"
        android:drawableLeft="@drawable/ellipse_green"
        android:drawablePadding="10dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:fontName="@string/font_semi_bold"
        android:layout_marginStart="15dp"
        android:id="@+id/tvScheduleDateTime"
        android:layout_marginTop="3dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        android:textColor="@color/grey_bg"
        android:text="@string/created_on"
        app:fontName="@string/font_semi_bold"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ellipse_green"
        android:drawablePadding="10dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:fontName="@string/font_semi_bold"
        android:id="@+id/tvCreatedOn"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"/>


    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        android:textColor="@color/grey_bg"
        android:text="@string/modified"
        app:fontName="@string/font_semi_bold"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ellipse_green"
        android:drawablePadding="10dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:fontName="@string/font_semi_bold"
        android:id="@+id/tvModified"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        android:textColor="@color/grey_bg"
        android:text="@string/schedule_date_time"
        app:fontName="@string/font_regular"
        android:visibility="invisible"
        android:drawableLeft="@drawable/ellipse_green"
        android:drawablePadding="10dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:fontName="@string/font_regular"
        android:visibility="invisible"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        android:textColor="@color/grey_bg"
        android:text="@string/created_by"
        app:fontName="@string/font_semi_bold"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ellipse_green"
        android:drawablePadding="10dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:fontName="@string/font_semi_bold"
        android:id="@+id/tvCreatedBy"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"/>


    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        android:textColor="@color/grey_bg"
        android:text="@string/modified_by"
        app:fontName="@string/font_semi_bold"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ellipse_green"
        android:drawablePadding="10dp"/>

    <com.developtech.efuelfo.customs.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewNormal"
        app:fontName="@string/font_semi_bold"
        android:id="@+id/tvModifiedBy"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"/>

  </LinearLayout>

  <ImageView
      android:layout_width="0dp"
      android:layout_weight="0.3"
      android:layout_height="wrap_content"
      android:src="@drawable/right_arrow"/>
</LinearLayout>